@model GSendService.Models.AddLicenseModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Model.SeoTitle;
}

<div class="row">
    <div class="col-sm-12">
        <h3>GSend Control Panel</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        <h1>@Localizer[nameof(GSend.Language.Resources.AddServerLicense)]</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <div>@Html.ValidationSummary()</div>
    </div>
</div>
<div class="row">
    <div class="col">
        <p>@Localizer[nameof(GSend.Language.Resources.LicenseAddDescription)]</p>
    </div>
</div>
@using (Html.BeginForm(nameof(GSendService.Controllers.HomeController.AddLicense), GSendService.Controllers.HomeController.Name, FormMethod.Post))
{
    <div class="row hd-row">
        <div class="col">
            @Html.LabelFor(m => m.License)
        </div>
    </div>
    <div class="row">
        <div class="col col-sm-12">
            @Html.ValidationMessageFor(m => m.License)
        </div>
    </div>
    <div class="row">
        <div class="col col-sm-12 col-md-6 col-lg-5">
            @Html.TextAreaFor(m => m.License, new { @class = "form-control" })
        </div>
    </div>
    <div class="row hd-row">
        <div class="col">
            <input class="btn btn-primary" type="submit" value="@Localizer[nameof(Languages.LanguageStrings.Submit)]" />
        </div>
    </div>
}
